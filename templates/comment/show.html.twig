{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ comment.Text }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ comment.User }}</td>
            </tr>
            <tr>
                <th>Post</th>
                <td>{{ comment.post }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ comment.Time ? comment.Time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ comment.Date ? comment.Date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">back to list</a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
