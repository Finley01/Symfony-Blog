{% extends 'base.html.twig' %}

{% block title %}Hello ControllerDefaultController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
        <table class="table">
            <thead>
            <tr>
                <th>Title</th>
                <th>Username</th>
                <th>Time</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
            <tr>
                <td>{{ post.Title }}</td>
                <td>{{ post.User.username }}</td>
                <td>{{ post.Time ? post.Time|date('H:i:s') : '' }}</td>
                <td>{{ post.Date ? post.Date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    <a href="{{ path('post_new') }}" class="btn btn-primary">Create new post</a>
</div>
{% endblock %}
